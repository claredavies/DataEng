{
	"info": {
		"_postman_id": "6c458f8c-4b51-4f16-a496-88a757880cec",
		"name": "DataEngProject",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Example API Call",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set('METHOD',data.request_method);",
							"pm.variables.set('request_method',data.request_uri);",
							"",
							"// decrypt the base4 encoded body ",
							"var CryptoJS = require('crypto-js');",
							"var parsedWord = CryptoJS.enc.Base64.parse(data.body_base64);",
							"var parsedStr = parsedWord.toString(CryptoJS.enc.Utf8);",
							"console.log(`Decrypted value: ${parsedStr}`);",
							"pm.environment.set('body_plain', parsedStr);",
							"",
							"console.log('method  : ' + data.request_method);",
							"console.log('uri  : ' + data.request_uri);",
							"console.log('body  : ' + parsedStr);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "{{METHOD}}",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{{body_plain}}",
					"options": {
						"raw": {
							"language": "text"
						}
					}
				},
				"url": {
					"raw": "{{request_method}}",
					"host": [
						"{{request_method}}"
					]
				}
			},
			"response": []
		}
	]
}